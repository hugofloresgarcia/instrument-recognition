    "version": "0.2.0",
    "configurations": [
    
        {
            "name": "mdb-synthetic-mono-mel256-tiny-bilstm-bce",
            "type": "python",
            "request": "launch",
            
            "console": "integratedTerminal", 
            "module": "instrument_recognition.train",  
            "args": [
                "--name",                "mdb-synthetic-mono-mel256-tiny-bilstm-bce",
                "--version",             "1",
                "--gpuid",               "0",
                "--max_epochs",          "250",

                "--embedding_name",      "openl3-mel256-512-music",
                "--model_size",          "tiny",
                "--recurrence_type",     "bilstm",
                "--dropout",             "0.3", 

                "--dataset_name",        "mdb-synthetic-mono",
                "--use_augmented",        "true",
                "--batch_size",          "64",
                "--num_workers",         "20",

                "--loss_fn",             "weighted_binary_cross_entropy",
                "--mixup",               "false",
                "--mixup_alpha",         "0.2",
                "--log_epoch_metrics",   "True",
            ]
        },
        {
            "name": "mdb-synthetic-mono-mel256-small-bilstm-batchnorm",
            "type": "python",
            "request": "launch",
            
            "console": "integratedTerminal", 
            "module": "instrument_recognition.train",  
            "args": [
                "--name",                "mdb-synthetic-mono-mel256-small-bilstm-batchnorm",
                "--version",             "1",
                "--gpuid",               "1",
                "--max_epochs",          "250",

                "--embedding_name",      "openl3-mel128-512-music",
                "--model_size",          "small",
                "--recurrence_type",     "bilstm",
                "--dropout",             "0.3", 

                "--dataset_name",        "mdb-synthetic-mono",
                "--use_augmented",        "true",
                "--batch_size",          "64",
                "--num_workers",         "20",

                "--loss_fn",             "weighted_multiclass_cross_entropy",
                "--mixup",               "false",
                "--mixup_alpha",         "0.2",
                "--log_epoch_metrics",   "True",
            ]
        },
    ]
